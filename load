#!/usr/bin/env python3

def dc(char,name):
    output=name
    for x in char:
        output=output.replace(x,"")
    return output
def formatname(name):
    return dc("!'.()?!@#$%^&*",name).replace(" ","-").lower()
commantDat=open("comments.js")
class designsHtml:
