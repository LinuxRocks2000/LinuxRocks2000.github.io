#!/usr/bin/env python3

## Build the comic files
print("Building comic.")
import os, json
directory=os.listdir("webcomic")
file=open("config.js","r")
data=json.load(file)

## Load a bunch of data to index.html
cmlist=""""""
for x in data["comics"]:
    cmlist+="""
<a class="comic-link" href="comic/"""+x[1]+"""">
    """+x[0]+"""
</a>
    """
index="""
<!DOCTYPE html>
<html>
    <head>
      <link rel="stylesheet" href="main.css">
      <title>LinuxRocks2000 - A webcomic</title>
    </head>
    <body>
      <script src="header.js"></script>
      <div id="comiclist">
          """+cmlist+"""
      </div>
    </body>
</html>
"""
c=open("index.html","w+")
c.write(index)
c.close
file.close()
